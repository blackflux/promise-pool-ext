{
  "name": "promise-pool-ext",
  "version": "0.0.0-development",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/promise-pool-ext.git"
  },
  "author": "Lukas Siemon",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.10.3",
    "@babel/core": "7.10.3",
    "@babel/plugin-proposal-object-rest-spread": "7.10.3",
    "@babel/register": "7.10.4",
    "@blackflux/eslint-plugin-rules": "1.3.30",
    "@blackflux/robo-config-plugin": "3.4.13",
    "babel-eslint": "10.1.0",
    "chai": "4.2.0",
    "coveralls": "3.1.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-json": "2.1.1",
    "eslint-plugin-markdown": "1.0.2",
    "eslint-plugin-mocha": "7.0.1",
    "js-gardener": "2.0.164",
    "node-tdd": "2.15.0",
    "nyc": "15.1.0",
    "random-dag": "1.0.4",
    "semantic-release": "17.1.1"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/promise-pool-ext/blob/master/LICENSE"
    }
  ],
  "description": "Queue promises into pool limiting concurrency",
  "keywords": [
    "promise",
    "pool",
    "concurrency",
    "limit",
    "parallel",
    "worker",
    "async"
  ],
  "engines": {
    "node": ">= 10"
  },
  "nyc": {
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener"
  },
  "homepage": "https://github.com/blackflux/promise-pool-ext#readme",
  "bugs": {
    "url": "https://github.com/blackflux/promise-pool-ext/issues"
  },
  "dependencies": {
    "joi-strict": "1.2.2"
  }
}
